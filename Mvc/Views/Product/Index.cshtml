@model IEnumerable<Domain.Entities.Product>

<h2>All the Products</h2>

<a href="/Product/Save" class="btn">New Product</a>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Category.Name</td>
                        <td>
                            <a href="/Product/Edit/@item.ID" class="btn">Edit</a>
                        </td>
                        <td>
                            <a href="/Product/Delete/@item.ID" class="btn">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>